                        <button style="border: none; background: transparent; float: left" data-toggle="modal" data-target="#exampleModal">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width: 38px; margin-top: -0.4rem; background: #086fad; border-radius: 100%; color: white ">
