                            </svg>

                        </button>
                    </th>
                    <th scope="col">Name</th>
                    <th scope="col">Ip</th>
                    <th scope="col">Hostname</th>
                    <th scope="col">Porta</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Password</th>
                    <th scope="col">St.</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["Company"] as List<Global5Teste.Controllers.Server>)
                {
                    <tr>
                        <th scope="row"> @item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Ip</td>
                        <td>@item.HostName</td>
                        <td>@item.Porta</td>
                        <td>@item.Usuario</td>
                        <td>@item.Password</td>
                        <td>@item.St</td>
                        <td>
                            <svg data-toggle="modal" data-target="#editModal" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style=" color: white; background: #d79c03; width: 27px; border-radius: 100%; padding: 3px; border: 0.2px solid #d79c03; margin-top: -1px;">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                            </svg>
                            <svg data-toggle="modal" data-target="#deleteModal" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="color: white; background: #c13804; width: 27px; border-radius: 100%; padding: 3px; border: 0.2px solid #c13804; margin-top: -1px; ">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

